{
  "name": "gitzen",
  "version": "0.1.3",
  "description": "ðŸ§  AI-powered CLI tool for automatic git commit message generation",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "gitzen": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "npm run build && npm link",
    "start": "node dist/index.mjs",
    "watch": "tsup --watch",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "check": "prettier --check \"**/*.{js,ts}\"",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "lint-staged:options": {
    "allowEmpty": true
  },
  "keywords": [
    "git",
    "cli",
    "autocommit",
    "ai-powered-tool",
    "github",
    "workflow"
  ],
  "author": "JorgeRosbel",
  "license": "Apache-2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeRosbel/gitzen"
  },
  "bugs": {
    "url": "https://github.com/JorgeRosbel/gitzen/issues"
  },
  "homepage": "https://github.com/JorgeRosbel/gitzen#readme",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.15",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "figlet": "^1.8.2",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.7.0",
    "openai": "^5.10.1",
    "ora": "^8.2.0",
    "update-notifier": "^7.3.1",
    "zod": "^3.25.76"
  }
}
