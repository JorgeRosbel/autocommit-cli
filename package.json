{
  "name": "autocommit",
  "version": "0.0.1",
  "description": "AI-powered CLI tool for automatic git commit message generation",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "autocommit": "./dist/index.cjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.cjs",
    "watch": "tsup --watch",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "check": "prettier --check \"**/*.{js,ts}\"",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "lint-staged:options": {
    "allowEmpty": true
  },
  "keywords": ["git","cli","autocommit","ai-powered-tool"],
  "author": "JorgeRosbel",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeRosbel/autocommit-cli"
  },
  "bugs": {
    "url": "https://github.com/JorgeRosbel/autocommit-cli/issues"
  },
  "homepage": "https://github.com/JorgeRosbel/autocommit-cli#readme",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "figlet": "^1.8.2",
    "inquirer": "^12.7.0",
    "openai": "^5.10.1",
    "ora": "^8.2.0"
  }
}
